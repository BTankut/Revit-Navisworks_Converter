<Window x:Class="RvtToNavisConverter.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="About" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Revit to Navisworks Converter" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <!-- Version Info -->
        <TextBlock Grid.Row="1" 
                   Text="Version 2.1.0" 
                   FontSize="16" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Developer Info -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignDivider}" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Developer Information" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="BarÄ±ÅŸ Tankut" 
                           FontSize="13"/>
                <TextBlock FontSize="13">
                    <Run Text="Email: "/>
                    <Hyperlink NavigateUri="mailto:baristankut@gmail.com" 
                               RequestNavigate="Hyperlink_RequestNavigate">
                        baristankut@gmail.com
                    </Hyperlink>
                </TextBlock>
                <TextBlock Text="Â© 2025 All rights reserved" 
                           FontSize="12" 
                           Opacity="0.8" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- License Status -->
        <Border Grid.Row="3" 
                Background="{Binding TrialBackground}" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="License Status" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TrialBackground.Color}" Value="#FFC107">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TrialBackground.Color}" Value="#F44336">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="{Binding TrialDisplayText}" 
                           FontSize="13">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TrialBackground.Color}" Value="#FFC107">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TrialBackground.Color}" Value="#F44336">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Hardware ID -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="Hardware ID" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding HardwareId, Mode=OneWay}" 
                     IsReadOnly="True"
                     materialDesign:HintAssist.Hint="Copy with Ctrl+C"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontFamily="Consolas"
                     FontSize="12"/>
            <TextBlock Text="Send this ID to the developer when purchasing a license." 
                       TextWrapping="Wrap"
                       FontSize="11"
                       Opacity="0.8"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="6" 
                Content="Close" 
                IsDefault="True"
                Click="CloseButton_Click"
                HorizontalAlignment="Center"
                Width="120"
                Margin="0,20,0,0"/>
    </Grid>
</Window>